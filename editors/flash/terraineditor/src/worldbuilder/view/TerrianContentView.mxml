<?xml version="1.0" encoding="utf-8"?>
<s:NavigatorContent xmlns:fx="http://ns.adobe.com/mxml/2009"
					xmlns:s="library://ns.adobe.com/flex/spark"
					xmlns:mx="library://ns.adobe.com/flex/mx"
					width="100%"
					height="100%">
	<s:layout>
		<s:HorizontalLayout/>
	</s:layout>
	<fx:Script>
		<![CDATA[
			import worldbuilder.presenters.TerrainPresenter;

			[Bindable]
			public var presenter : TerrainPresenter;
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:SWFLoader id="heightMapLoader"
				 source="{presenter.terrainHeightMapBitmap}"
				 width="159"
				 height="159"
				 scaleContent="true"/>
	<s:VGroup width="185"
			  height="100%">
		<s:DropDownList width="173">
		</s:DropDownList>
		<s:Button label="Open texture editor"
				  id="launchHeightMapEditor"/>
		<s:Button label="Update"/>
	</s:VGroup>
	<mx:VRule height="100%"/>
	<s:VGroup width="125"
			  height="100%">
		<s:Label text="Terrain Size:"/>
		<s:HGroup width="100%"
				  height="27"
				  verticalAlign="middle">
			<s:Label text="Width:"/>
			<s:NumericStepper id="terrianWidth"
							  width="100%"
							  value="@{presenter.sizeWidth}"
							  maximum="100000"
							  minimum="1000"/>
		</s:HGroup>
		<s:HGroup width="100%"
				  height="27"
				  verticalAlign="middle">
			<s:Label text="Height:"/>
			<s:NumericStepper id="terrainHeight"
							  width="100%"
							  value="@{presenter.sizeHeight}"
							  maximum="100000"
							  minimum="1000"/>
		</s:HGroup>
		<s:HGroup width="100%"
				  height="27"
				  verticalAlign="middle">
			<s:Label text="Depth:"/>
			<s:NumericStepper id="terrainDepth"
							  width="100%"
							  value="@{presenter.sizeDepth}"
							  maximum="100000"
							  minimum="1000"/>
		</s:HGroup>
	</s:VGroup>
	<mx:VRule height="100%"/>
	<s:VGroup width="135"
			  height="100%">
		<s:Label text="Segments:"/>
		<s:HGroup width="100%"
				  height="27"
				  verticalAlign="middle">
			<s:Label text="Width:"/>
			<s:NumericStepper id="segmentsWidth"
							  width="100%"
							  value="@{presenter.segmentsW}"
							  maximum="300"
							  minimum="30"/>
		</s:HGroup>
		<s:HGroup width="100%"
				  height="27"
				  verticalAlign="middle">
			<s:Label text="Height:"/>
			<s:NumericStepper id="segmentsHeight"
							  width="100%"
							  value="@{presenter.segmentsH}"
							  maximum="300"
							  minimum="30"/>
		</s:HGroup>
		<mx:HRule width="100%"/>
		<s:Label text="Elevation:"/>
		<s:HGroup width="100%"
				  height="27"
				  verticalAlign="middle">
			<s:Label text="Min:"/>
			<s:NumericStepper id="elevationMin"
							  width="100%"
							  value="@{presenter.elevationMin}"
							  maximum="255"
							  minimum="0"/>
		</s:HGroup>
		<s:HGroup width="100%"
				  height="27"
				  verticalAlign="middle">
			<s:Label text="Max:"/>
			<s:NumericStepper id="elevationMax"
							  width="100%"
							  value="@{presenter.elevationMax}"
							  maximum="255"
							  minimum="0"/>
		</s:HGroup>
	</s:VGroup>
</s:NavigatorContent>
